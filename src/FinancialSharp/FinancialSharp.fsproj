<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <MSBuildTreatWarningsAsErrors>true</MSBuildTreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>FinancialSharp</PackageId>
    <Title>FinancialSharp: a collection of elementary financial functions</Title>
    <Version>1.0.0</Version>
    <Description>FinancialSharp is a library containing a collection of elementary financial functions, written entirely in F#.</Description>
    <Authors>Enrico Galassi</Authors>
    <PackageLicenseUrl>https://raw.githubusercontent.com/galassie/financial-sharp/master/LICENSE.md</PackageLicenseUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <NoPackageAnalysis>true</NoPackageAnalysis>
    <PackageTags>financial;F#;fsharp;</PackageTags>
    <PackageIconUrl>https://raw.githubusercontent.com/galassie/financial-sharp/master/assets/financial-sharp-200x200.png</PackageIconUrl>
    <PackageIcon>financial-sharp-200x200.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/galassie/financial-sharp</RepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <RepositoryType>git</RepositoryType>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../assets/financial-sharp-200x200.png" Pack="true" PackagePath="/"/>
    <None Include="../../README.md" Pack="true" PackagePath="/"/>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Financial.fs" />
  </ItemGroup>

</Project>
